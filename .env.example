# Hugging Face token for Pyannote models
# Get it from: https://huggingface.co/settings/tokens
# Accept pyannote/speaker-diarization-3.1 conditions: https://huggingface.co/pyannote/speaker-diarization-3.1
PYANNOTE_AUTH_TOKEN=your_huggingface_token_here

# Server configuration
HOST=0.0.0.0
PORT=8000

# Model configuration (legacy - kept for backward compatibility)
WHISPER_MODEL=small
ENABLE_DIARIZATION=true

# Dual Pipeline Configuration
# DEFAULT_MODEL: Which pipeline to use by default (tdv1 or tdv1-fast)
DEFAULT_MODEL=tdv1-fast

# TDv1 Pipeline (High Quality)
# Whisper Large-v3 + Diarization + Google Translate
# Use for: File transcription where accuracy is paramount
# Performance: ~15-20s per 10s of audio
ENABLE_TDV1=true
TDV1_WHISPER_MODEL=large-v3

# TDv1-Balanced Pipeline (Balanced Quality & Speed)
# Whisper Medium + Diarization + Google Translate
# Use for: File transcription with good quality and faster processing
# Performance: ~8-12s per 10s of audio
ENABLE_TDV1_BALANCED=true
TDV1_BALANCED_WHISPER_MODEL=medium

# TDv1-Fast Pipeline (Real-time)
# Faster-Whisper Medium + Diarization + Google Translate
# Use for: Live transcription where speed is critical
# Performance: ~4-6s per 10s of audio
ENABLE_TDV1_FAST=true
TDV1_FAST_WHISPER_MODEL=medium

# Audio processing
CHUNK_DURATION_SECONDS=10.0
MAX_AUDIO_FILE_SIZE_MB=100

# VAD (Voice Activity Detection)
ENABLE_VAD=true
VAD_AGGRESSIVENESS=1

# Pyannote Diarization settings
# Min speakers: 1 = auto-detect, or set to expected minimum
# Max speakers: Maximum number of speakers to detect
PYANNOTE_MIN_SPEAKERS=1
PYANNOTE_MAX_SPEAKERS=10
# Clustering threshold: Lower = more speakers detected (0.0-1.0, default 0.7153814901696104)
# Lower values are more sensitive and will split speakers more aggressively
PYANNOTE_CLUSTERING_THRESHOLD=0.5  # For file uploads with full audio context
PYANNOTE_LIVE_CLUSTERING_THRESHOLD=0.65  # For live transcription (more conservative)
# Segmentation onset: Speech detection sensitivity (default varies by model)
PYANNOTE_SEGMENTATION_ONSET=0.5
